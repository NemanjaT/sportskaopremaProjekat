@model SportskaOpremaNemanjaTutunovic.Models.KategorijaBO

@{
    ViewBag.Title = "Create";
}

<h2>Dodavanje nove kategorije</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Unesite podatke o kategoriji</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idKat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.idKat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idKat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NazivKategorije, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazivKategorije, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazivKategorije, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default btn btn-success btn-l active" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na pregled kategorija", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
